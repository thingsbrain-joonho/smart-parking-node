    text-decoration: none;
    /* display: inline-block; */
    font-size: 16px;
  }

  .button-green {
    background-color: #4CAF50;
  }
</style>

<section role="main" class="content-body">
  <header class="page-header">
    <h2>실시간 입출차</h2>

    <div class="right-wrapper pull-right">
      <ol class="breadcrumbs">
        <li>
          <a href="/">
            <i class="fa fa-home"></i>
          </a>
        </li>
        <li><span>실시간 입출차</span></li>
      </ol>

      <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
    </div>
  </header>

  <!-- [HERE!!!!] start: page -->
  <div class="row" style="margin-top:-60px;">
    <div class="col-md-6" style="text-align:center; padding:20px;">
      <h2>입차화면</h2>
      <div class="col-md-12" style="margin:0;">
        <img src="/images/web/sample_front.jpg" style="width:100%; border-top-left-radius: 10px; border-top-right-radius:10px;" />
        <!-- <canvas></canvas> -->
      </div>
      <div class="col-md-12">
        <button class="button" onclick="opening('in_open')">차단기 올리기</button>
      </div>
      <!-- <div class="col-md-6">
          <button class="button button-green">차단기 내리기</button>
        </div> -->
    </div>

    <div class="col-md-6" style="text-align:center; padding:20px;">
      <h2>출차화면</h2>
      <div class="col-md-12" style="margin:0;">
        <img src="/images/web/sample_back.jpg" style="width:100%; border-top-left-radius: 10px; border-top-right-radius:10px;" />
        <!-- <canvas></canvas> -->
      </div>
      <div class="col-md-12">
        <button class="button" onclick="opening('out_open')">차단기 올리기</button>
      </div>
      <!-- <div class="col-md-6">
            <button class="button button-green">차단기 내리기</button>
          </div> -->
    </div>

    <div class="col-md-6" style="margin:15px; text-align:center;">
      <div class="col-md-8" style="background-color:white; border:1px solid gray; border-radius:10px; text-align:center; margin-left:66%;">
        <h2 style="color:black;">17보 1177</h2>
      </div>
    </div>
    <div class="col-md-12" style="line-height:200%; text-align:center; left:10%;">
      <!-- <div class="col-md-1"></div> -->
      <div class="col-md-3" style="border:1px solid gray; border-radius:5px;margin:10px; padding: 10px; background-color:white;">
        <div>
          <span style="color:black; font-size:20px;">입차시간<br>10시 47분 22초</span>
        </div>
      </div>
      <div class="col-md-3" style="border:1px solid gray; border-radius:5px; margin:10px; padding: 10px; background-color:white;">
        <div>
          <span style="color:black; font-size:20px; ">출차시간<br>15시 30분 17초</span>
        </div>
      </div>
      <div class="col-md-3" style="border:1px solid gray; border-radius:5px; margin:10px; padding: 10px; background-color:white;">
        <div>
          <span style="color:black; font-size:20px; ">총 요금<br>4,900원</span>
        </div>
      </div>
    </div>
  </div>

</section>

<script>
  function opening(data) {
    // alert('click!');
    Swal.fire({
      title: '정말 차단기를 여시겠습니까?',
      // text: "You won't be able to revert this!",
      type: 'warning',
      width: '450px',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: '확인',
      cancelButtonText: '취소',
    }).then(function(result) {
      if (result.value) {
        $.ajax({
          url: '',
          dataType: 'json',
          type: 'POST',
          data: {
            data: data
          },
          contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
        });
        Swal.fire({
          // position: 'top-end',
          type: 'success',
          title: '차단기가 열렸습니다',
          showConfirmButton: false,
          timer: 1500
        });
      }
    });
  }
</script>
